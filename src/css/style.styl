// Element

.searchbox
  position: relative
  width: 320px
  margin-bottom: 16px
  .search-icon
    position: absolute
    color: grey
    top: 7px
    left: 5px
    font-size: 16px
  .searchclear
    //display: none
    position: absolute
    right: -5px
    top: -4px
    font-size: 27px
    color: #b6b6b6
    cursor: pointer
    &:hover
      color: grey
  .search
    width: 100%
    padding: 3px 22px 
    font-size: 13px
    radius(13px)
    &:focus
      outline: none
      border-color: focus-color
      box-shadow(0 1px 2px focus-color inset)

.sidebar
  width: 180px
  float: left
  h4
    margin-bottom: 4px
  ul
    margin-bottom: 8px
    li
      margin: 0 0 4px 12px
    a
      color: text-color
      &:hover
        color: orange

.content
  float: left
  width: 720px
  padding-left: 16px
  border-left: 1px dotted border-color

.date
  color: grey
  margin-right: 8px

.gallery
  li
    display: inline-block
    width: 20%
    text-align: center
    padding: 8px
    vertical-align: top
    border: 1px solid transparent
    radius(4px)
    transition(all 0.2s ease)
    &:last-child
      margin-right: 0
    img
      max-width: 166px
      height: 80px
    &:hover
      border: 1px solid border-color
      cursor: pointer
      background: light-background

.largelist
  margin: 0
  li
    list-style-type: none
    margin: 0
    border-top: 1px solid border-color
    padding: 8px 0
    > a img
      height: 80px
      width: 80px
      margin-right: 8px
    > div
      display: inline-block
      vertical-align: top
      border: 4px solid white

.cadre
  img
    border: 4px solid white
    box-shadow 0 0 3px rgba(0, 0, 0, 0.3)
    radius(4px)

