    box-shadow 0 0 3px rgba(0, 0, 0, 0.3)
    radius(4px)
  img.full
    width: 100%
  img.half
    width: 50%
  img.quarter
    width: 25%
  .message
    position: absolute
    bottom: 12px
    left: 8px
