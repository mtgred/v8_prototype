// Layout
.body
  width: 900px
  margin: 0 auto

.topheader
  margin: 12px 0
  h1
    float: left
    font-weight: 400
    font-family: Metrophobic
    font-size: 25px
    margin: 0 12px 0 0
    a
      color: text-color
  .tagline
    margin-top: 11px
  ul
    li
      float: left
      margin-top: 9px
      margin-left: 16px

.nav
  margin: 8px 0 16px
  ul
    //display: inline-block
    border: 1px solid border-color
    vertical-gradient(white, #f2f2f2)
    radius(4px)
    li
      float: left
      min-width: 100px
      a
        display: block
        font-weight: bold
        padding: 10px 20px
        color: text-color
        text-align: center
        border-right: 1px solid border-color
        //box-shadow 1px 0 rgba(255, 255, 255, 0.75)
      &:first-child a
        radius(4px 0 0 4px)
      &:last-child a
        radius(0 4px 4px 0)
    a.active
      background: #f25824
      color: white

.section
  margin: 16px 0
  .header
    padding-bottom: 4px
    border-bottom: 1px solid border-color
    h2
      float: left
      margin: 0 12px 0 0
    span
      margin-top: 7px

.footer
  border-top: 1px solid border-color
  border-bottom: 1px solid border-color
  margin-top: 64px
  padding: 16px 0 120px
  background: light-background
  ul
    vertical-align: top
    display: inline-block
    width: 160px
    h4
      margin: 4px 0
    li
      margin: 2px 0
    a
      color: text-color
      &:hover
        color: orange

.pane
  border: 1px solid border-color
  margin-bottom: 8px
  padding: 32px
  background: light-background
  radius(4px)

// Element

.searchbox
  position: relative
  width: 320px
  margin-bottom: 16px
  .search-icon
    position: absolute
    color: #888
    top: 6px
    left: 5px
    font-size: 16px
  .searchclear
    //display: none
    position: absolute
    right: -5px
    top: -4px
    font-size: 27px
    color: #b6b6b6
    cursor: pointer
    &:hover
      color: #888
  .search
    width: 100%
    padding: 3px 22px 
    font-size: 13px
    color: grey
    border: 1px solid border-color
    radius(13px)
    box-shadow(0 1px 2px rgba(0,0,0,0.2) inset)
    &:focus
      outline: none
      border-color: focus-color
      box-shadow(0 1px 2px focus-color inset)

.date
  color: grey
  margin-right: 8px

.gallery
  li
    display: inline-block
    width: 180px
    text-align: center
    padding: 8px
    vertical-align: top
    border: 1px solid transparent
    radius(4px)
    &:last-child
      margin-right: 0
    img
      max-width: 166px
      height: 80px
    &:hover
      border: 1px solid border-color
      cursor: pointer
      background: light-background

.largelist
  li
    border-top: 1px solid border-color
    padding: 8px 0
    > a img
      height: 80px
      width: 80px
      margin-right: 8px
    > div
      display: inline-block
      vertical-align: top
      border: 4px solid white


// Specific
