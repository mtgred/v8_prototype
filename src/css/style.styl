* 
  -moz-box-sizing: border-box
  -webkit-box-sizing: border-box
  box-sizing: border-box

body
  color: text-color
  margin: 0
  font-family: "Open Sans", "PT Sans", Lato, "Lucida Grande", Helvetica, Verdana, Arial, sans-serif
  font-size: 13px

a
  text-decoration: none
  color: orange
  &:hover
    color: text-color

table
  border-collapse: collapse

ul
  padding: 0
  margin: 0

li
  list-style-type: none
  margin: 0

h1, h2, h3, h4
  margin: 0

p
  margin: 4px 0

form
  margin: 0

input, textarea
  font-family: Lato, Helvetica, sans-serif
  font-size: 13px
  color: #333
  padding: 1px 5px
  border: 1px solid input-border
  radius(3px)
  box-shadow(inset 0 1px 4px rgba(0, 0, 0, 0.2))

a.button:link, a.button:visited, button, input[type='submit']
  display: inline-block
  border: 1px solid #ababab
  color: #404040
  margin: 0
  padding: 4px 10px
  font-size: 12px
  text-align: center
  vertical-gradient(#efefef, #d8d8d8)
  radius(3px)
  box-shadow 0 1px 2px rgba(0, 0, 0, .1), 0 1px 1px rgba(255, 255, 255, .8) inset
  text-shadow: 0 1px 1px rgba(255, 255, 255, .5)
  -webkit-font-smoothing: antialiased
  outline: none

a.button:hover, button:hover, input[type='submit']:hover
  vertical-gradient(#f6f6f6, #e3e3e3)
  cursor: pointer

a.button:focus, button:focus, input[type='submit']:focus
  border: 1px solid #80bfff
  vertical-gradient(#f6f6f6, #e3e3e3)
  box-shadow 0 0 3px #80bfff, 0 1px 1px rgba(255, 255, 255, .8) inset

a.button:active, a.button.active, button:active, button.active, input[type='submit']:active, input[type='submit'].active
  background: #e3e3e3
  background: -moz-linear-gradient(top, #e3e3e3, #f6f6f6) #1b468f
  background: -webkit-gradient(linear, left top, left bottom, from(#e3e3e3), to(#f6f6f6)) #1b468f
  background: linear-gradient(top, #e3e3e3, #f6f6f6) #1b468f
  box-shadow(none)

a.button.disabled, button:disabled, input[type='submit']:disabled
  background: #efefef !important
  border: 1px solid #d1d1d1 !important
  box-shadow(none !important)
  color: #aaa !important
  cursor: default
  text-shadow: 0 1px 1px #fff !important

button.primary
  color: white
  vertical-gradient(#dc5f59, #b33630)
  box-shadow(none)

button.primary:hover
  vertical-gradient(lighten(#dc5f59, 3%), lighten(#b33630, 3%))
  box-shadow(0 0 1px rgba(0,0,0,0.2))

button.primary:active
  vertical-gradient(#b33630, #dc5f59)
  box-shadow(none)

button.primary
  background-color: #DF3F3F
  background-image: -webkit-gradient(linear, left top, left bottom, from(#DF3F3F), to(#A21A1A))
  background-image: -webkit-linear-gradient(top, #DF3F3F, #A21A1A)
  background-image: -moz-linear-gradient(top, #DF3F3F, #A21A1A)
  background-image: -ms-linear-gradient(top, #DF3F3F, #A21A1A)
  background-image: -o-linear-gradient(top, #DF3F3F, #A21A1A)
  background-image: linear-gradient(to bottom, #DF3F3F, #A21A1A)
  -moz-box-shadow: 0 1px 2px rgba(0, 0, 0, 0.1), 0 1px 1px rgba(155, 155, 155, 0.4) inset
  -webkit-box-shadow: 0 1px 2px rgba(0, 0, 0, 0.1), 0 1px 1px rgba(155, 155, 155, 0.4) inset
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.1), 0 1px 1px rgba(155, 155, 155, 0.4) inset

.left
  float: left
  margin-right: 8px

.right
  float: right
  margin-left: 8px

.clear
  clear: both

.italic
  font-style: italic

.highlight
  color: orange !important

* html .clearfix
  height: 1%
  overflow: visible

*+html .clearfix
  min-height: 1%

.clearfix:after
  clear: both
  content: "."
  display: block
  height: 0
  visibility: hidden
  font-size: 0

